        <% book.book_comments.each do |book_comment| %>
        <div>
        <p><%= image_tag book_comment.user.get_profile_image, size:"80x80" %>
        <%= book_comment.user.name %>
        <%= book_comment.comment %>
          <% if book_comment.user == current_user %>
          <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger", remote: true %>
          <% end %>
        </p>
        </div>
        <% end %>
      <div>
        <%= form_with model: [book, @book_comment], local: false do |f| %>
        <%= f.text_area :comment, rows: '5', style: "width:100%" %><br>
        <%= f.submit "送信" %>
        <% end %>
      </div>