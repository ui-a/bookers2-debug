<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th><%= link_to user.active_relationships.count, user_followings_path(user.id) %></th>
  </tr>
  <tr>
	  <th>followers</th>
	  <th><%= link_to user.passive_relationships.count, user_followers_path(user.id) %></th>
  </tr>
</table>

<div class='row'>
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user), class: "btn btn-info btn-block", method: :delete %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user), class: "btn btn-success btn-block", method: :post %>
    <% end %>
  <% end %>
  <% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>
